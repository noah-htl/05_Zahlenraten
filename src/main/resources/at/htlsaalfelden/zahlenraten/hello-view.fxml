<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.RangeSlider?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.htlsaalfelden.zahlenraten.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Zahlenraten" underline="true">
      <font>
         <Font name="Rekha" size="37.0" />
      </font>
   </Label>


    <Button onAction="#onHelloButtonClick" text="Raten" />
    <TextField fx:id="numberInput" onKeyTyped="#onKeyTyped" promptText="1-100" />
    <Label fx:id="response" />
   <Label fx:id="versuche" />
   <RangeSlider fx:id="slider" highValue="100.0" lowValue="0.0" max="100.0" showTickLabels="true" />
   <Button mnemonicParsing="false" onAction="#onGenerate" text="Play" />
</VBox>
